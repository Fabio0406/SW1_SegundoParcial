<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_notice_calendar" model="ir.actions.act_window">
            <field name="name">Agenda</field>
            <field name="res_model">academic_erp.notice</field>
            <field name="view_mode">calendar</field>
            <field name="view_id" ref="view_notice_calendar"/>
            <field name="context">{}</field>
            <field name="domain">[]</field> <!-- Aplicaremos el dominio dinÃ¡mico desde el modelo -->
        </record>

        <record id="view_notice_calendar" model="ir.ui.view">
            <field name="name">Notice Calendar</field>
            <field name="model">academic_erp.notice</field>
            <field name="arch" type="xml">
                <calendar string="Agenda" date_start="fecha_publicacion" color="tipo_especifico">
                    <field name="titulo"/>
                    <field name="tipo_especifico"/>
                </calendar>
            </field>
        </record>
    </data>
</odoo>